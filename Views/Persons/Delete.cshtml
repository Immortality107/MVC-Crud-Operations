@model PersonResponse
@using ServiceContracts.Enums;

@{
    ViewBag.Title = "Edit Person";
}

<a asp-controller="persons" asp-action="Delete" class="link-hover">Back to Persons List</a>

<a asp-controller="Persons" asp-action="Delete"> Delete Person </a>
<span>Are You Sure You Want To Delete This Person?</span>

<div class="center-box">
    <form asp-controller="persons "asp-action="Delete" method="post">
        @*PersonName*@
        <div class="form-field flex">
                <div class="w-25">
                <label  asp-for="PersonName" class="form-label pt">Person Name</label>
            </div>
            <div class="flex-1">
                <input asp-for="PersonName" class="form-input" disabled="disabled" />
            </div>

        @*Email*@
        <div class="form-field flex">
                <label asp-for="Email" class="form-label pt">Email</label>
            </div>
            <div class="flex-1">
                <input asp-for="Email" class="form-input" disabled="disabled" />
            </div>
        </div>    
        @*PersonID*@
        <div class="form-field flex">
            <div class="w-25">
            </div>
            <div class="flex-1">
                <input type="hidden" asp-for="@Model.PersonId" />
              <span asp-validation-for="@Model.PersonId" class="text-red"></span>
            </div>
        </div>
        @*Submit*@
        <div class="form-field flex">
            <div class="w-25">
            </div>
            <div class="flex-1">
                <button class="button button-red-back">Delete</button>
                <div asp-validation-summary="All"></div>
                @if (ViewBag.Errors != null)
                {
                    <div class="text-red ml">
                        <ul>
                            @foreach (string error in ViewBag.Errors)
                            {
                                <li class="ml">@error</li>
                            }
                        </ul>
                    </div>
                }
            </div>
        </div>

    </form>
</div>

